<!DOCTYPE import-control PUBLIC
        "-//Checkstyle//DTD ImportControl Configuration 1.4//EN"
        "https://checkstyle.org/dtds/import_control_1_4.dtd">

<import-control pkg="io.kroxylicious.proxy.*" regex="true">
    <disallow class="java.awt"/>
    <!-- Allowed globally -->
    <allow pkg="javax?\..*" regex="true"/>
    <allow pkg="org.slf4j"/>
    <allow pkg="edu.umd.cs.findbugs"/>
    <allow pkg="org.apache.kafka"/>
    <allow pkg="io.netty" />
    <allow pkg="io.kroxylicious" />
    <allow pkg="io.micrometer.core.instrument" />
    <allow pkg="com.fasterxml.jackson.annotation" />
    <subpackage name="internal">
        <allow class="com.fasterxml.jackson.databind.ObjectMapper" />
        <allow pkg="io.micrometer.prometheusmetrics" />
    </subpackage>
    <subpackage name="config" >
        <allow pkg="com.fasterxml.jackson" />
    </subpackage>
</import-control>
